<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>Warpr</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <OutputType>Library</OutputType>
    <AssemblyName>Warpr.Gateway</AssemblyName>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Warpr.Gateway</Title>
    <Authors>axodox</Authors>
    <Description>The signaling server and gateway for Warper which is a WebRTC based ultra-low latency video streaming library.</Description>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/axodox/warpr</RepositoryUrl>
    <PackageTags>axodox webrtc streaming aspdotnet</PackageTags>
    <IsPackable>true</IsPackable>
    <AssemblyVersion>$(VersionPrefix)</AssemblyVersion>
    <FileVersion>$(VersionPrefix)</FileVersion>
    <PackageOutputPath>..\Output</PackageOutputPath>
    <PackageLicenseExpression>MPL-2.0</PackageLicenseExpression>
    <Copyright>Copyright ©2025 Peter Major</Copyright>
  </PropertyGroup>

</Project>
